/* 表格数据 */
/**index.wxss**/

/*整个表格*/
.table{
  margin-top: 20px;
  font-size: 15px;
  width: 98%;
  margin-left: 1%;
  margin-right: 1%;
 
}
/*设置行*/
.tr {
  width: 100%;
  display: flex;
  /*垂直居中*/
  align-items: center;
  /*水平居中*/
  justify-content: center;
  height: 3rem;
}
/*设置所有单元格*/
.th,.td{
   width: 100%;
  /*文字居中*/
  text-align: center;
  /*垂直居中*/
  align-items: center;
  /*水平居中*/
  justify-content: center;
  /*和上面.tr的height对应，数值修改一样就可*/
  height: 3rem;
  color:#9CB8B3
}
/*设置表格边框的边框，不想麻烦所以所有的边框都在这里写了，可以自己修改*/
.tr,.th,.td{
  border: 1rpx solid lightgrey;
}
.table{
    border: 1rpx solid #F1FFFD;
}
/*标题单元格*/
.th {
  display: flex;
  background: #9CB8B3;
  color: white;
  font-size: large;
}
/*文字单元格*/
.td{
  padding-top: 20rpx;
 
  background:white;
}
